{block content}
{if isset($offering)}
    <!-- Edit Form View -->
    <div class="container mt-5">
      <h2 class="mb-4 text-center">Edit Offering</h2>
      <div class="row justify-content-center">
        <div class="col-md-8">
          {control offerForm}
          <p class="mt-3 text-center">
            <a href="{link offerings}" class="btn btn-secondary">← Back to Offerings List</a>
          </p>
        </div>
      </div>
    </div>
  {else}
    <!-- Offerings List View -->
    <div class="container mt-5">
      <h2 class="mb-4 text-center">Edit Offerings</h2>
      <p class="mt-3 text-center">
            <a href="{link Dashboard:default}" class="btn btn-secondary">← Back to Dashboard</a>
          </p>
      <div class="row justify-content-center">
        <div class="col-md-10">
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>Label</th>
                <th>Content</th>
                <th>Ordering</th>
                <th>Edit</th>
              </tr>
            </thead>
            <tbody>
              {foreach $offerings as $offer}
                <tr>
                  <td>{$offer->label}</td>
                  <td>{$offer->content}</td>
                  <td>{$offer->ordering}</td>
                  <td>
                    <a href="{link offerings, id => $offer->id}" class="btn btn-sm btn-primary">Edit</a>
                  </td>
                </tr>
              {/foreach}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  {/if}

